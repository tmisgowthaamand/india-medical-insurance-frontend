{
  "css.validate": false,
  "less.validate": false,
  "scss.validate": false,
  "postcss.validate": false,
  "files.associations": {
    "*.css": "postcss"
  },
  "editor.quickSuggestions": {
    "strings": true
  },
  "css.lint.unknownAtRules": "ignore",
  "css.lint.invalidApply": "ignore",
  "tailwindCSS.includeLanguages": {
    "css": "css",
    "postcss": "postcss"
  },
  "editor.inlineSuggest.enabled": true,
  "tailwindCSS.experimental.classRegex": [
    "class[Name]*\\s*[:=]\\s*[\"']([^\"']*)[\"']"
  ]
}
